<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout   
	xmlns:android="http://schemas.android.com/apk/res/android"  
	android:orientation="vertical"
    android:layout_width="match_parent"   
    android:layout_height="match_parent"   
    >  
	<com.mt.androidtest.myselfview.SelfDrawnView  
	        android:layout_width="100dp"  
	        android:layout_height="100dp"  
	        android:layout_gravity="center"
	/>
	
    <com.mt.androidtest.myselfview.CombinedView
        android:id="@+id/title_view"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content" />  
        
	<com.mt.androidtest.myselfview.InheritedView
	    xmlns:app="http://schemas.android.com/apk/res/com.mt.androidtest"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:custom_color1="#ff000000"
		style="@style/myStyle"/>
	
    <HorizontalScrollView   
		android:layout_width="match_parent"   
		android:layout_height="wrap_content"
		android:scrollbars = "none"
		android:background="@android:color/holo_blue_dark">  
		<LinearLayout   
			android:layout_width="wrap_content"  
	        android:layout_height="wrap_content" 
	        android:gravity="center_vertical" 
	        android:orientation="horizontal">  
            <GridView
				android:id="@+id/mygridview"
				android:layout_width="wrap_content"  
                android:layout_height="wrap_content"
                android:paddingStart="4dip"
                android:paddingEnd="4dip"
                android:paddingTop="4dip"
                android:paddingBottom="4dip"/>  
		</LinearLayout>  
	</HorizontalScrollView>
	
	<com.mt.androidtest.myselfview.ScrollViewGroup 
	    android:layout_width="match_parent"
	    android:layout_height="50dp">
	    <Button
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:text="First child view: Slide left!"/>
	
	    <Button
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:text="Second child view: Slide left or right!"/>
	
	    <Button
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:text="Third child view: Slide right!"/>

	</com.mt.androidtest.myselfview.ScrollViewGroup>
	
	<com.mt.androidtest.myselfview.MySelfButton 
	        android:layout_width="100dp"  
	        android:layout_height="50dp"  
	        android:text="MSButton"
	/>	
		
	<com.mt.androidtest.myselfview.ScrollFrameLayout
		android:layout_width="match_parent"
		android:layout_height="50dp">
	    <TextView
	        android:id="@+id/scrolltv"
			android:layout_width="60dp"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text="TextView"
			android:background="@color/wheat"/>
	</com.mt.androidtest.myselfview.ScrollFrameLayout>		

</LinearLayout> 